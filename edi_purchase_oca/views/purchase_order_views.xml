<odoo>
    <record id="purchase_order_form" model="ir.ui.view">
        <field name="name">purchase.order.form - edi_purchase_oca</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
            <page name="purchase_delivery_invoice" position="after">
                <page name="edi" string="EDI">
                    <group
                        name="edi_purchase_group"
                        string="Electronic Data Interchange"
                    >
                        <field name="edi_disable_auto" string="Disable" />
                    </group>
                </page>
            </page>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button
                    type="object"
                    class="oe_stat_button"
                    icon="fa-retweet"
                    invisible="not exchange_record_count"
                    name="action_view_edi_records"
                >
                    <div class="o_form_field o_stat_info">
                        <span class="o_stat_value">
                            <field name="exchange_record_count" />
                        </span>
                        <span class="o_stat_text">EDI</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
